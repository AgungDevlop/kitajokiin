---
import MainLayout from '../layouts/MainLayout.astro';

// Import astro.config.mjs to get base path
import config from '../../astro.config.mjs';
const { base: basePath } = config;

// Page-specific data
const pageImage = `/about-og.jpg`; // Prefix dengan basePath
const pageKeywords = 'tentang KitaJoki.in, jasa teknologi, tim profesional, Indonesia';
const pageStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'AboutPage',
  name: 'About | KitaJoki.in',
  description: 'Tentang KitaJoki.in, penyedia jasa teknologi terpercaya di Indonesia.',
  url: `${basePath}/about`, // Gunakan basePath
  publisher: {
    '@type': 'Organization',
    name: 'KitaJoki.in',
    logo: {
      '@type': 'ImageObject',
      url: `${basePath}/logo.png` // Gunakan basePath
    }
  }
};
---

<MainLayout 
  title="About"
  description="Tentang KitaJoki.in, penyedia jasa teknologi terpercaya di Indonesia."
  image={pageImage}
  keywords={pageKeywords}
  structuredData={pageStructuredData}
>
  <section class="py-8 bg-black text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-[Playfair Display] text-yellow-400 mb-6" data-aos="fade-up">Tentang KitaJoki.in</h2>
      <p class="text-lg text-gray-200 mb-6" data-aos="fade-up" data-aos-delay="100">Kami adalah tim profesional yang berdedikasi untuk membantu Anda mencapai tujuan melalui layanan teknologi yang aman dan terpercaya.</p>
    </div>
  </section>
</MainLayout>