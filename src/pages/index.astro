---
import MainLayout from '../layouts/MainLayout.astro';
import PostCard from '../components/PostCard.jsx';
const posts = await import('../data/cardpost.json').then(module => module.default);
---

<MainLayout 
  title="Home" 
  description="KitaJoki.in - Jasa joki untuk profesional untuk website, aplikasi, desain, dan lainnya."
>
  <section class="py-8 bg-black text-white relative">
    <div class="relative w-full h-64 sm:h-80 lg:h-96 overflow-hidden" data-aos="fade-up">
      <img
        src="https://placehold.co/1200x400?text=Welcome+to+KitaJoki.in"
        alt="KitaJoki.in Banner"
        class="w-full h-full object-cover object-center"
      />
      <div class="absolute inset-0 bg-black bg-opacity-50 flex flex-col items-center justify-center text-center px-4">
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-[Playfair Display] text-yellow-400 mb-2 sm:mb-4" data-aos="fade-up" data-aos-delay="100">Welcome to KitaJoki.in</h1>
        <p class="text-sm sm:text-lg lg:text-xl text-gray-200 max-w-md" data-aos="fade-up" data-aos-delay="200">Penyedia jasa profesional untuk website, aplikasi, desain, dan solusi teknologi.</p>
      </div>
    </div>
  </section>

  <section class="py-8 pb-12 bg-black text-white">
    <h2 class="text-3xl font-semibold font-[Playfair Display] text-yellow-400 text-center mb-6" data-aos="fade-up">Layanan Kami</h2>
    <p class="text-lg font-medium text-gray-300 text-center mb-6" data-aos="fade-up" data-aos-delay="100">Beragam solusi digital untuk kebutuhan Anda</p>
    <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 gap-6 md:gap-8 mb-6 md:mb-8">
      {posts.map((post, index) => (
        <PostCard
          client:load
          id={post.id}
          title={post.title}
          image={post.image}
          date={post.date}
          description={post.description}
          slug={post.slug}
          data-aos="fade-up"
          data-aos-delay={`${200 + index * 100}`}
        />
      ))}
    </div>
  </section>
</MainLayout>