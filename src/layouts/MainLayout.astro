---
import '../styles/global.css';
import Header from '../components/Header.jsx';
import Footer from '../components/Footer.jsx';
import AOSInitializer from '../components/AOSInitializer.jsx';

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | KitaJoki.in</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={`https://agungdevlop.github.io/kitajokiin${Astro.url.pathname}`} />
    <meta property="og:title" content={`${title} | KitaJoki.in`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`https://agungdevlop.github.io/kitajokiin${Astro.url.pathname}`} />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-black text-white font-inter">
    <AOSInitializer client:load />
    <Header client:load />
    <main class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <slot />
    </main>
    <Footer client:load />
  </body>
</html>