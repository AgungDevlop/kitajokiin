---
import '../styles/global.css';
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | KitaJoki.in</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={`https://agungdevlop.github.io/kitajoki${Astro.url.pathname}`} />
    <meta property="og:title" content={`${title} | KitaJoki.in`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`https://agungdevlop.github.io/kitajoki${Astro.url.pathname}`} />
  </head>
  <body class="bg-gray-100 text-gray-900">
    <header class="bg-primary text-white p-4">
      <nav class="container mx-auto flex justify-between items-center">
        <h1 class="text-2xl font-bold">KitaJoki.in</h1>
        <ul class="flex space-x-4">
          <li><a href="/" class="hover:underline">Home</a></li>
          <li><a href="/services" class="hover:underline">Services</a></li>
          <li><a href="/about" class="hover:underline">About</a></li>
          <li><a href="/contact" class="hover:underline">Contact</a></li>
        </ul>
      </nav>
    </header>
    <main class="container mx-auto p-4">
      <slot />
    </main>
    <footer class="bg-secondary text-white p-4 text-center">
      <p>&copy; 2025 KitaJoki.in. All rights reserved.</p>
    </footer>
  </body>
</html>